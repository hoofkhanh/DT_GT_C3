#include<stdio.h>
#include<limits.h>
void nhapManh(int a[],int &n){	
	printf("nhap n ");
	scanf("%d",&n);

	for(int i=0;i<n;i++){
		printf("a[%d]",i);
		scanf("%d",&a[i]);
	}
}

void xuatMang(int a[],int n){
	printf("Cac gia tri da nhap : ");
	for(int i=0;i<n;i++){
		printf("%4d",a[i]);
	}
}

void sapXepTangDan(int a[],int n){
	for(int i=0;i<n-1;i++){
		for(int j=i+1;j<n;j++){
			if(a[j]<a[i]){
				int tam=a[i];
				a[i]=a[j];
				a[j]=tam;
			}
		}
	}
}

int main(){
	int n,a[100];
	nhapManh(a,n);
	xuatMang(a,n);
	sapXepTangDan(a,n);
	printf("\nMang tang dan : ");
	xuatMang(a,n);
	
}
