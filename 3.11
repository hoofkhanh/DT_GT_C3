#include<stdio.h>
#include<math.h>

void nhapManh(int a[],int &n){	
	printf("\nnhap n ");
	scanf("%d",&n);

	for(int i=0;i<n;i++){
		printf("a[%d]",i);
		scanf("%d",&a[i]);
	}
}

void xuatMang(int a[],int n){
	printf("Cac gia tri da nhap : ");
	for(int i=0;i<n;i++){
		printf("%4d",a[i]);
	}
}


void sapXeptangDan(int a[],int n){
	for(int i=0;i<n-1;i++){
			for(int j=i+1;j<n;j++){
				if(a[j]<a[i]){
					int tam=a[i];
					a[i]=a[j];
					a[j]=tam;
				}
			}
		}
	
	
}

void tronMang(int a[],int n_a,int b[],int n_b,int c[],int &n_c){
	n_c=n_a+n_b;
	sapXeptangDan(a,n_a);
	sapXeptangDan(b,n_b);
	int i_c=0,i_b=n_b-1,i_a=n_a-1;
	while(i_c<n_c){
		 if(i_a<0){
			c[i_c]=b[i_b];
			i_b--;
		}else if(i_b<0){
			c[i_c]=a[i_a];
			i_a--;
		}else if(a[i_a]>b[i_b]){
			c[i_c]=a[i_a];
			i_a--;
		}else {
			c[i_c]=b[i_b];
			i_b--;
		}	
			i_c++;
	}
}

int main(){
	int n_a,n_b,n_c,a[100],b[100],c[200];
	nhapManh(a,n_a);
	xuatMang(a,n_a);
	
	nhapManh(b,n_b);
	xuatMang(b,n_b);
	
	tronMang(a,n_a,b,n_b,c,n_c);
	printf("\ntron mang : ");
	xuatMang(c,n_c);

	
}
