#include<stdio.h>
#include<limits.h>
void nhapManh(int a[],int &n){	
	printf("nhap n ");
	scanf("%d",&n);

	for(int i=0;i<n;i++){
		printf("a[%d]",i);
		scanf("%d",&a[i]);
	}
}

void xuatMang(int a[],int n){
	printf("Cac gia tri da nhap : ");
	for(int i=0;i<n;i++){
		printf("%4d",a[i]);
	}
}


void sapXepLeTangDan(int a[],int n){
	for(int i=0;i<n-1;i++){
		if(a[i]%2!=0){
			for(int j=i+1;j<n;j++){
				if(a[j]%2!=0 && a[j] < a[i]){
					int tam=a[i];
					a[i]=a[j];
					a[j]=tam;
				}
			}
		}
	}
}



int main(){
	int n,a[100];
	nhapManh(a,n);
	xuatMang(a,n);
	sapXepLeTangDan(a,n);
	printf("\nMang le giam dan : ");
	xuatMang(a,n);
	
}
