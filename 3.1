#include<stdio.h>
#include<math.h>
#include <stdlib.h>

void nhap_mang(int **a, int *n) {
    *n = 0;
    *a = (int*)malloc(*n * sizeof(int));
    if (*a == NULL) {
        printf("Khong the cap phat bo nho\n");
        exit(0);
    }
    int i = 0;
    while (1) {
        printf("a[%d]",i);
       	scanf("%d",*a+i);
       	if(*(*a+i)==0){ //*(*a+i)
       		*n=i;	
       		break;	
		}
        i++;
        *n=*n+1;
        *a = (int*)realloc(*a, *n * sizeof(int));
        if (*a == NULL) {
            printf("Khong the cap phat bo nho\n");
            exit(0);
        }
    }
}

void xuatMang(int *a,int n){
	for(int i=0;i<n;i++){
		printf("%4d",*(a+i));	
	}
}

void mangTangDan(int *a,int n){
	for(int i=0;i<n-1;i++){
		for(int j=i+1;j<n;j++){
			if(a[i]>a[j]){
				int tam=a[i];
				a[i]=a[j];
				a[j]=tam;
			}
		}
	}
}

int main() {
    int *a, n;
    nhap_mang(&a, &n);
    xuatMang(a,n);
    mangTangDan(a,n);
    printf("\n");
    xuatMang(a,n);
    free(a);
    return 0;
}
